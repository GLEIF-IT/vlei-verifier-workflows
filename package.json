{
  "name": "vlei-verifier-workflows",
  "version": "0.0.5",
  "description": "Workflows for vLEI users and vLEI credentials for the vLEI-verifier service",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean": "del-cli ./dist",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./build/configs/tsconfig.esm.json && npx echo-cli '{\"type\": \"module\"}' > dist/esm/package.json",
    "build:cjs": "tsc -p ./build/configs/tsconfig.cjs.json && npx echo-cli '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "test": "jest test/",
    "test:full": "npm install && npm run formatter && npm run linter && npm run dependency-checker && npm run build && docker compose down && docker compose up -d && npm test && docker compose down",
    "linter": "npx eslint src test",
    "generate-docs": "jsdoc --configure .jsdoc.json --verbose",
    "formatter:fix": "prettier --write .",
    "formatter": "prettier --check .",
    "dependency-checker": "npx depcheck --ignores='buffer, @typescript-eslint/eslint-plugin, @typescript-eslint/parser'"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "js-yaml": "^4.1.0",
    "mathjs": "^12.4.0",
    "signify-ts": "^0.3.0-rc1",
    "vlei-verifier-client": "0.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/jest": "^29.5.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "del-cli": "^6.0.0",
    "depcheck": "^1.4.7",
    "echo-cli": "^2.0.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.24.1"
  }
}
